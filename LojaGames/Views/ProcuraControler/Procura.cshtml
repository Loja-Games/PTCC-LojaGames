@model IEnumerable<LojaGames.Models.Tb_produto>;

<link href="~/css/produto.css" rel="stylesheet" />


<div id="carouselExampleControls" class="carousel slide xfull" data-bs-ride="carousel" data-bs-interval="6000">
    <div class="carousel-inner">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="4" aria-label="Slide 5"></button>
        </div>
        <div class="carousel-item active">
            <img class="d-block" src="@Url.Content("~/assets/image/exibicao/banner1.svg")">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="@Url.Content("~/assets/image/exibicao/BANNER2.svg")">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="@Url.Content("~/assets/image/exibicao/BANNER4.svg")">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="@Url.Content("~/assets/image/exibicao/Banner3.svg")">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="@Url.Content("~/assets/image/exibicao/Banner6.svg")">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Próximo</span>
    </button>
</div>

<div class="borda d-flex">
    <aside class="p-4">
        <h1 class="fontpagina">Filtro:</h1>
        <div class="p-3 backfiltro">
            <h4 class="fontpagina pb-1">Tipo de Produtos:</h4>
            <label><input type="checkbox" name="name" value="" /> Notebook</label>
            <label><input type="checkbox" name="name" value="" /> Computador - PC</label>
            <label><input type="checkbox" name="name" value="" /> Hardware</label>
            <label><input type="checkbox" name="name" value="" /> Midia Digital</label>
            <label><input type="checkbox" name="name" value="" /> Midia Fisica</label>
            <label><input type="checkbox" name="name" value="" /> Console de Video Game</label>
            <label><input type="checkbox" name="name" value="" /> Acessórios</label>
        </div>
        <div class="p-3 mt-3 backfiltro">
            <h4 class="fontpagina pb-1">Marcas:</h4>
            <label><input type="checkbox" name="name" value="" /> Sony</label>
            <label><input type="checkbox" name="name" value="" /> Microsoft - Windows</label>
            <label><input type="checkbox" name="name" value="" /> Microsoft - Xbox</label>
            <label><input type="checkbox" name="name" value="" /> Logitech</label>
            <label><input type="checkbox" name="name" value="" /> Positivo</label>
            <label><input type="checkbox" name="name" value="" /> NVIDIA</label>
            <label><input type="checkbox" name="name" value="" /> AMD</label>
            <label><input type="checkbox" name="name" value="" /> Intel</label>
            <label><input type="checkbox" name="name" value="" /> ASUS</label>
        </div>
    </aside>
    <div class="p-4">
        <h1 class="fontpagina">Lista de Produtos:</h1>
        <div class="lista">

            @foreach (var item in Model)
            {
                <section class="containerdoproduto p-3">
                    <img class="imagemcotainerproduto" src="@item.img_path">
                <div class="conteudoproduto p-2">
                    <div class="nomedoitem pb-1">
                        @Html.DisplayFor(modelItem => item.Nome_prod) - @Html.DisplayFor(modelItem => item.Descricao_prod)
                    </div>
                    <div class="preco pb-1">
                        @Html.DisplayFor(modelItem => item.ValorCusto_prod)
                    </div>
                    <div class="precoavista">
                        <div class="textoavista">A Vista no PIX</div>
                        <div class="precovista">@Html.DisplayFor(modelItem => item.ValorVenda_prod)</div>
                    </div>
                </div>
                </section>
            }

        </div>
    </div>

</div>
